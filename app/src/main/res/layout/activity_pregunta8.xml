<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pregunta8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/fragile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".pregunta3">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="79dp"
            android:background="#99000000"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/siguiente2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <TextView
                android:id="@+id/pregunta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué efecto tiene el Timefall en los objetos y en el entorno?"
                android:textAlignment="center"
                android:textColor="#C79E51"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <RadioGroup
                android:id="@+id/grupo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radio1Preg8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#C39C4F"
                    android:text="Acelera el deterioro y envejecimiento"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <RadioButton
                    android:id="@+id/radio2Preg8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#C39C4F"
                    android:text="Regenera la flora y fauna"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <RadioButton
                    android:id="@+id/radio3Preg8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#C39C4F"
                    android:text="Ralentiza el paso del tiempo"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <RadioButton
                    android:id="@+id/radio4Preg8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#C39C4F"
                    android:text="Transforma los objetos en otros materiales"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />
            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/siguiente2"
            android:layout_width="349dp"
            android:layout_height="110dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="84dp"
            android:backgroundTint="@color/correcto"
            android:text="Responder y avanzar a la siguiente pregunta"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>