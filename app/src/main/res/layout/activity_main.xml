<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="34dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Cuál de los siguientes equipos te permite transportarte rápidamente entre ubicaciones?"
                    android:textAlignment="center"
                    android:textColor="#C79E51"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/respuestaspinpreg6"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/resultado6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="34dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Cuál de estos temas es central en la narrativa de Death Stranding?"
                    android:textAlignment="center"
                    android:textColor="#C79E51"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/grupo3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/respuestarad1preg7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Conexiones y aislamiento"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/respuestarad2preg7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Guerra y política"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/respuestarad3preg7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Venganza y redención"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/respuestarad4preg7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Ciencia y magia"
                        android:textColor="#FFFFFF" />
                </RadioGroup>

                <TextView
                    android:id="@+id/resultado7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="34dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pregunta8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Qué efecto tiene el Timefall en los objetos y en el entorno?"
                    android:textAlignment="center"
                    android:textColor="#C79E51"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/grupo4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/respuestarad1preg8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Acelera el deterioro y envejecimiento"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/respuestarad2preg8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Regenera la flora y fauna"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/respuestarad3preg8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Ralentiza el paso del tiempo"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/respuestarad4preg8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Transforma los objetos en otros materiales"
                        android:textColor="#FFFFFF" />
                </RadioGroup>

                <TextView
                    android:id="@+id/resultado8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/clifford"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/clifford"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="34dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#99000000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pregunta9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Cuál es el propósito de las estructuras Chiral que construyes y utilizas en el juego?"
                        android:textAlignment="center"
                        android:textColor="#C79E51"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/check1Preg9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#C39C4F"
                        android:text="Facilitar la conexión entre jugadores en línea"
                        android:textColor="#FFFFFF" />

                    <CheckBox
                        android:id="@+id/check2Preg9"
                        android:layout_width="match_parent"
                        android:buttonTint="#C39C4F"
                        android:layout_height="wrap_content"
                        android:text="Proveer puntos de almacenamiento"
                        android:textColor="#FFFFFF" />

                    <CheckBox
                        android:id="@+id/check3Preg9"
                        android:layout_width="match_parent"
                        android:buttonTint="#C39C4F"
                        android:layout_height="wrap_content"
                        android:text="Permitir teletransportarse"
                        android:textColor="#FFFFFF" />

                    <CheckBox
                        android:id="@+id/check4Preg9"
                        android:layout_width="match_parent"
                        android:buttonTint="#C39C4F"
                        android:layout_height="wrap_content"
                        android:text="Ofrecer nuevos tipos de armas"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/resultado9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="34dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#99000000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pregunta10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Cuál es el objetivo principal de Sam Porter en Death Stranding?"
                        android:textAlignment="center"
                        android:textColor="#C79E51"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/respuestaspinpreg10"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/resultado10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="34dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/corregir"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#C59D50"
                        android:text="Corregir"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#99000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/aciertos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Aciertos:"
                        android:textAlignment="viewStart"
                        android:textColor="#C79E51"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/cantidad"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textColor="#C79E51"
                        android:textSize="34sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#99000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/resultado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Resultado:"
                        android:textAlignment="viewStart"
                        android:textColor="#C79E51"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/numero"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textColor="#C79E51"
                        android:textSize="34sp" />

                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>